<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ site.baseurl }}/">
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">
              {% if site.first_name %}
                {{- site.first_name -}}
              {% endif %}
              {% if site.middle_name %}
                {{- site.middle_name -}}
              {% endif %}
              {% if site.last_name %}
                {{- site.last_name -}}
              {% endif %}
            </span>
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% social_links %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>
      {% if site.enable_darkmode %}
        <!-- Theme toggle (mobile top-right) -->
        <div class="d-sm-none ml-2">
          <button class="light-toggle" title="Change theme" aria-label="Change theme">
            <i class="fa-half-sun-moon light-toggle-system"></i>
            <i class="fa-solid fa-moon light-toggle-dark"></i>
            <i class="fa-solid fa-sun light-toggle-light"></i>
          </button>
        </div>
      {% endif %}

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% for page in site.pages %}
            {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
          {% endfor %}

          <!-- About -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/' | relative_url }}">
              {{- about_title }}
              {% if page.permalink == '/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>

          <!-- Core pages -->
          <li class="nav-item {% if page.permalink == '/research/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/research/' | relative_url }}">
              Research
              {% if page.permalink == '/research/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>
          <li class="nav-item {% if page.permalink == '/teaching/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/teaching/' | relative_url }}">
              Teaching
              {% if page.permalink == '/teaching/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>
          <li class="nav-item {% if page.permalink == '/music/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/music/' | relative_url }}">
              Music
              {% if page.permalink == '/music/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>
          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()">
                <span class="nav-link">ctrl k <i class="fa-solid fa-magnifying-glass"></i></span>
              </button>
            </li>
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="toggle-container d-none d-sm-block">
              <button class="light-toggle" title="Change theme" aria-label="Change theme">
                <i class="fa-half-sun-moon light-toggle-system"></i>
                <i class="fa-solid fa-moon light-toggle-dark"></i>
                <i class="fa-solid fa-sun light-toggle-light"></i>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
